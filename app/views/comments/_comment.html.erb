<div class='p-2 bg-purple-100 rounded-xl'>
  <div class='grid grid-cols-10 gap-3 '>
    <div class='col-span-1 '>
      <% if comment.user.avatar_url != nil %>
        <%= image_tag(comment.user.avatar_url, :class=> " mr-3 rounded-2xl") %>
      <% else %>
        <%= image_tag 'avatar1.png', class: 'rounded-2xl mr-3' %>
      <% end %>
    </div>
    <div class='col-span-9'>
      <div class='flex justify-between'>
        <p class="flex-1 text-xl font-bold text-gray-600"><%= comment.user.username %></p>
        <%= link_to "刪除留言", comment_path(comment), method: "delete",data: {confirm: "確定要刪除嗎"} , class:'hover:text-red-300' if current_user.present?%>
      </div>
      <p class="text-sm text-gray-500"><%= comment.created_at.strftime("%Y-%m-%d %H:%M") %></p>
    </div>  
  </div> 
  <div class="flex-1 pt-2 font-medium ">
    <%= comment.content %>
  </div>
</div>
