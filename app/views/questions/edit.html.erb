<main>
  <section class='py-10 bg-gray-50'>
    <div class="max-w-6xl mx-auto">
      <h1 class="mb-3 text-center"><%= @project.title %></h1>
      <p class="mb-4 text-center">提案者：<a href="" class="primary-text-color"><%= @project.organizer %></a></p>
    </div>
  </section>
  <section class='py-12 reverse-bg'>
    <div class='max-w-3xl px-6 py-3 mx-auto bg-white shadow rounded-2xl'>
      <h2 class="py-4 my-4 text-2xl tracking-wider text-center text-white bg-purple-400 rounded-2xl" >修改常見問題</h2>
      <% if @question.errors.any? %>
        <% @question.errors.full_messages.each do |msg| %>
          <%= msg %>
        <% end %>
      <% end %>
      <%= form_with model: @question do |form| %>
        <div class="form-list">
          <%= form.label :title, "問題主題 *", class:"form-list-label" %>
          <%= form.text_field :title, class:"form-list-field input-focus" %>
        </div>
        <div class="form-list">
          <%= form.label :content, "問題內容 *", class:"form-list-label" %>
          <%= form.text_field :content, class:"form-list-field input-focus" %>
        </div>
          <%= form.submit "確認送出", class:"field bg-purple-400 hover:bg-purple-600 w-full rounded px-6 py-2 text-white" %>
      <% end %>
    </div>  
  </section>
</main>