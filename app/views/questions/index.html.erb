<main>
  <section class='py-10 bg-gray-100'>
    <div class="max-w-6xl mx-auto">
      <h1 class="mb-3 text-center"><%= @project.title %></h1>
      <p class="mb-4 text-center">提案者：<a href="" class="primary-text-color"><%= @project.organizer %></a></p>
    </div>
  </section>
  <div class="justify-between max-w-6xl px-5 mx-auto bg-white border-t-2 border-b-2 border-gray-300 border-double lg:flex">
    <div class="flex items-center justify-center h-16 py-3 font-semibold text-gray-400">
    <%= link_to '專案內容', project_path(@project), class:"mx-5"%>
    <%= link_to '常見問題', project_questions_path(@project), class:"current-page mx-5"%>
    <%= link_to '留言專區', project_comments_path(@project), class:"mx-5"%>
    </div>
    <div class='flex items-center justify-center my-2'>
      <%= link_to "新增常見問題", new_project_question_path(@project.id), class:'mx-5 p-2 inline-block border border-purple-400 rounded-xl border-soild' %>
    </div>
  </div>
  <%# 常見問題區 %>
  <section class='py-8 border-b-2 border-gray-300 border-double'>
    <div class="max-w-6xl grid-cols-10 gap-12 px-3 mx-auto lg:grid">
      <div class="col-span-7 accordion">
        <% @questions.each do |question| %>
          <div class="contentBox">
            <div class="contentTitle">
              <h2><span class="mr-8">Q<%= question.id%></span><%= question.title %></h2>
            </div>
            <div class="content">
              <p><%= question.content %></p>
              <div class='flex justify-between mt-2'>  
                <p><%= question.updated_at.strftime("%Y-%m-%d %H:%M") %></p>
                <%# <% if @project_id == current_user.project_ids %> 
                <div>
                  <%= link_to "編輯", edit_question_path(question.id), class:'mr-3'%>
                  <%= link_to "刪除", question, method: 'delete' %>
                </div>
                <%# <% end %> 
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <%# silde-bar %>
      <div class='col-span-3 '>
        <div class='w-full p-4 border border-gray-300 border-solid rounded-xl'>
          <h2 class='mb-3'><a href=''><%= @project.organizer %></a></h2>
          <p class='mb-3'>動態介紹動態介紹動態介紹動態介紹動態介紹動態介紹動態介紹...<a href='' class='primary-text-color hover:text-purple-300'>查看更多</a></p>
          <a href='' class="px-2 py-1 text-2xl duration-500 hover:bg-gray-100"><i class="fa-brands fa-square-facebook"></i></a>
          <a href='' class="px-2 py-1 text-2xl duration-500 hover:bg-gray-100"><i class="fa-brands fa-instagram"></i></a>
        </div>
      </div>
    </div>  
  </section>
</main>  