<main class=''>
  <section class='py-10 bg-gray-100'>
    <div class="max-w-6xl mx-auto">
      <h1 class="mb-3 text-2xl text-center text-semibold"><%= @project.title %></h1>
      <p class="mb-4 text-center">提案者 <span class="primary-text-color"><%= @project.organizer %></span></p>
    </div>
  </section>
  <div class="px-5 bg-white border-t-2 border-b-2 border-gray-300 border-double " >
    <div class='justify-between max-w-6xl mx-auto lg:flex'>
      <div class="flex items-center justify-center h-16 py-3 font-semibold text-gray-400 ">
        <%= link_to '專案內容', project_path(@project), class:"mx-5"%>
        <a href='<%= project_questions_path(@project)%>' class="mx-5">
          常見問題 <span class='text-xs align-top'><%= @project.questions.count%></span>
        </a>
        <a href='<%= project_comments_path(@project)%>' class="mx-5">
          留言專區 <span class='text-xs align-top'><%= @project.comments.count%></span>
        </a>
        <%= link_to '即時通訊', project_messages_path(@project), class:"mx-5 current-page"%>
      </div>
    </div>
  </div>
  <section class='py-8 border-b-2 border-gray-300 border-double'>
    <div class="max-w-6xl grid-cols-10 gap-12 mx-auto lg:grid ">
      <% if @donated %>
        <div class="col-span-5 col-start-2 accordion" data-controller='messageList' data-project-id=<%= @project.id %>>
          <div data-messageList-target='box' class='overflow-x-hidden overflow-y-auto h-450' id='box'>
            <div data-messageList-target='message' class='px-4 border border-gray-300 rounded-xl '>
              <% if @project.messages.empty? %>
                <div>開始對話</div>
              <% else %>
                <% @project.messages.each do |message| %>
                  <% if message.user == current_user %>
                    <%= render 'messages/selfmessage', message: message %>
                  <% else %>  
                      <%= render 'messages/message', message: message %>  
                  <% end %>
                <% end %>
              <% end %>  
            </div>
          </div>
          <%= form_with(model: @message, url: project_messages_path(@project.id), method: 'post',
                        local: true,
                        data: { action: 'ajax:success->messageList#clearInput'},
                        class:''
              ) do |form| %>
            <%= form.hidden_field :project_id, value: @project.id %>
            <%= form.hidden_field :user_id, value: @project.user_id %>
            <div class='flex p-2 mx-auto w-max'>
              <%= form.text_field :content, data: { 'messageList-target': 'input' }, class:'py-3 input-focus mx-1 bg-gray-200', placeholder:'輸入訊息'%>
              <%= button_tag type: 'submit', data: {disable_with: false}, class: 'text-purple-400 hover:text-purple-600 py-2 pl-3 pr-4 rounded-full border border-purple-400', data: { action: ''} do %>
                <i class="text-lg fa-solid fa-paper-plane" data-action='click->messageList#bottom'></i>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <%= link_to '請先贊助此專案，即可使用即時通訊功能', project_path(@project), class:'col-span-5 col-start-2 '%>
        <%= link_to '贊助專案', project_donate_items_path(@project) %>
      <% end %>
      <%# silde-bar %>
      <div class='col-span-3 col-end-11 '>
        <div class='w-full p-4 mb-3 border border-gray-300 border-solid rounded-xl'>
          <h2 class='mb-3 primary-text-color'><%= @project.organizer %></h2>
          <p class='mb-3 break-words'><%= @project.user.description%></p>
          <i class="mr-2 text-2xl fa-brands fa-square-facebook"></i>
          <i class="text-2xl fa-brands fa-instagram"></i></a>
        </div>
      </div>
    </div>  
  </section>
</main> 