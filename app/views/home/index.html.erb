<main class="bg-gray-50" >
    <section id="banner">
        <%= javascript_pack_tag 'Banner' %>
    </section>
    <section class='my-5 pb-5'>
        <div class="max-w-6xl mx-auto flex items-end mb-4">
            <h2 class="mx-5 text-3xl font-extrabold">平台推薦</h2>
            <a class="text-purple-400" href="">More</a>
        </div>
        <div class="mx-auto max-w-6xl md:flex ">
            <% @projects.each do |project| %>
                <div class="FundraisingItem mx-5 md:w-1/3 pb-6">
                    <img class="w-full rounded-3xl" src="https://picsum.photos/300/200/?random=10" alt="ss"/>
                    <div class='mb-7'>
                        <h3 class='hover:text-blue-400 my-1 font-semibold text-xl'><%= link_to project.title, project_path(project) %></h3>
                        <p class='my-1'>提案者 <span class='text-blue-400 hover:text-blue-300'><%= project.organizer %></span></p>
                    </div>
                    <div>
                        <span class='my-1'>NT$ <%= project.current_total %></span>
                    </div>
                    <div class="progress-container h-4 rounded-md relative my-4">
                        <span id="progressPercent">0%</span>
                        <div class="progress" data-controller='progressBar' data-percentage='<%= ((project.current_total.to_f / project.amount_target).round(2) * 100).to_i %>'></div>
                    </div> 
                    <div class=''>
                        <span>倒數 <%= (project.end_time - project.created_at).to_i / 1.day %> 天</span>
                    </div>
                </div>
            <% end %>
        </div>
    </section>
    <section id='feature' class="my-5 pb-5">
        <%= javascript_pack_tag 'Feature' %>
    </section>
    <section>
        <div class="mx-auto max-w-6xl md:flex ">
            <% @projects.each do |project| %>
                <div class="FundraisingItem mx-5 md:w-1/3 pb-6">
                    <img class="w-full rounded-3xl" src="https://picsum.photos/300/200/?random=10" alt="ss"/>
                    <div class='mb-7'>
                        <h3 class='hover:text-blue-400 my-1 font-semibold text-xl'><%= link_to project.title, project_path(project) %></h3>
                        <p class='my-1'>提案者 <span class='text-blue-400 hover:text-blue-300'><%= project.organizer %></span></p>
                    </div>
                    <div>
                        <span class='my-1'>NT$ <%= project.current_total %></span>
                    </div>
                    <div class="progress-container h-4 rounded-md relative my-4">
                        <span id="progressPercent">0%</span>
                        <div class="progress" data-controller='progressBar' data-percentage='<%= ((project.current_total.to_f / project.amount_target).round(2) * 100).to_i %>'></div>
                    </div> 
                    <div class=''>
                        <span>倒數 <%= (project.end_time - project.created_at).to_i / 1.day %> 天 
                    </div>
                </div>
            <% end %>         
        </div>
    </section>
    <%# 提案章節 %>
    <section class='propose flex flex-col items-center py-5'>
        <p class='text-center'>用群眾的力量，<br/>讓有價值的事物獲得更好的機會！</p>
        <%= link_to "提案", new_project_path, class:"bg-purple-400 px-14 py-3 my-6 rounded-lg text-white hover:bg-purple-300"%>
    </section>
</main>
