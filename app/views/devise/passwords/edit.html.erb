<h2>變更密碼</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "請輸入密碼", class:"field font-extralight border-solid border-2 rounded w-full pl-2 py-2 border-slate-300" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "請再輸入一次密碼", class:"field font-extralight border-solid border-2 rounded w-full pl-2 py-2 border-slate-300" %>
  </div>

  <div class="actions">
    <%= f.submit "重設密碼",  class:"field bg-blue-400 hover:bg-blue-600 w-full rounded px-6 py-2 my-1 text-white" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
