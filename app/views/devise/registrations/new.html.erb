<%= render "devise/shared/error_messages", resource: resource %>
<main class='py-10 bg-gray-100'>
  <div class="px-5 mx-auto md:w-400">
    <h1 class="text-2xl font-medium tracking-wider text-center primary-text-color">註冊新帳號</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="py-3">
        <%= f.label :email, "信箱："%>
        <%= f.email_field :email, autofocus: true, placeholder: "請輸入Email", autocomplete: "email", class:"field rounded w-full pl-2 py-2 mt-2 input-focus" %>
      </div>
      <div class="py-3">
        <%= f.label :username, "使用者名稱："%>
        <%= f.text_field :username, autofocus: true, placeholder: "請輸入使用者名稱", autocomplete: "username", class:"field rounded w-full pl-2 py-2 mt-2 input-focus" %>
      </div> 
      <div class="py-2 field">
        <% if @minimum_password_length %>
          <%= f.label :password, "密碼："%>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "請輸入密碼", class:"field rounded w-full pl-2 py-2 mt-2 input-focus" %><br />
          <em>(至少需要<%= @minimum_password_length %>個字)</em>
        <% end %>
      </div>
      <div class="py-2 field">
        <%= f.label :password_confirmation, "密碼確認："%>
        <%= f.password_field :password_confirmation, placeholder: "請再輸入一次密碼", autocomplete: "new-password", class:"field rounded w-full mt-2 pl-2 py-2 input-focus" %>
      </div>
      <div class="actions">
        <%= f.submit "註冊", class:"field bg-purple-400 hover:bg-purple-600 w-full rounded px-6 py-2 text-white my-4" %>
      </div>
    <% end %>
    <div class='py-10 my-5 border-t border-b border-gray-200 border-solid'>
      <p class='text-center'>已有 Wubay 帳號 <%= link_to "登入", new_session_path(resource_name), class:'primary-text-color hover:text-purple-300' %></p>
    </div>
    <div class='my-10'>
      <%= link_to '使用🇬google帳號繼續' , user_google_oauth2_omniauth_authorize_path, class:'outside-link mb-3' %>
      <%= link_to '使用🇫facebook帳號繼續' , user_facebook_omniauth_authorize_path, class:'outside-link' %>
    </div>
  </div> 
</main>
