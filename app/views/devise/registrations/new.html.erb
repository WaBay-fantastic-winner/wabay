<%= render "devise/shared/error_messages", resource: resource %>
<main class='bg-gray-100 py-10'>
  <div class="px-5 md:w-400 mx-auto">
    <h1 class="primary-text-color font-medium text-2xl tracking-wider text-center">註冊新帳號</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="py-6">
        <p>信箱：</p>
        <%= f.email_field :email, autofocus: true, placeholder: "請輸入Email", autocomplete: "email", class:"field rounded w-full pl-2 py-2 input-focus" %>
      </div>
      <div class="py-6">
        <p>使用者名稱：</p>
        <%= f.email_field :username, autofocus: true, placeholder: "請輸入Email", autocomplete: "email", class:"field rounded w-full pl-2 py-2 input-focus" %>
      </div>
      <div class="field py-2">
        <% if @minimum_password_length %>
        <p>密碼：</p>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "請輸入密碼", class:"field rounded w-full pl-2 py-2 input-focus" %><br />
        <em>(至少需要<%= @minimum_password_length %>個字)</em>
        <% end %>
      </div>

      <div class="field py-2">
        <p>密碼確認：</p>
        <%= f.password_field :password_confirmation, placeholder: "請再輸入一次密碼", autocomplete: "new-password", class:"field rounded w-full pl-2 py-2 input-focus" %>
      </div>

      <div class="actions">
        <%= f.submit "註冊", class:"field bg-purple-400 hover:bg-purple-600 w-full rounded px-6 py-2 text-white my-4" %>
      </div>
    <% end %>
    <div class='py-10 my-5 border-t border-b border-gray-200 border-solid'>
    <p class='text-center'>已有 Wubay 帳號 <%= render "devise/shared/links" %></p>
    </div>
    
  </div> 
</main>
