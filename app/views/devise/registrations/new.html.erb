<div class="bg-slate-400 w-1/4">
  <h2 class="text-blue-400 font-medium text-2xl tracking-wider text-center">註冊新帳號</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="py-6">
      <%= f.email_field :email, autofocus: true, placeholder: "請輸入Email", autocomplete: "email", class:"field font-extralight border-solid border-2 rounded w-full pl-2 py-2 border-slate-300" %>
    </div>

    <div class="field py-2">
      <% if @minimum_password_length %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "請輸入密碼", class:"field font-extralight border-solid border-2 rounded w-full pl-2 py-2 border-slate-300" %><br />
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class="field py-2">
      <%= f.password_field :password_confirmation, placeholder: "請再輸入一次密碼", autocomplete: "new-password", class:"field font-extralight border-solid border-2 rounded w-full pl-2 py-2 border-slate-300" %>
    </div>

    <div class="actions">
      <%= f.submit "註冊", class:"field bg-blue-400 hover:bg-blue-600 w-full rounded px-6 py-2 text-white" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div> 
