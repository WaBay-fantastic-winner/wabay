<%= render "devise/shared/error_messages", resource: resource %>
<main class='bg-gray-100 py-10'>
  <div class="px-5 md:w-400 mx-auto">
    <h1 class="text-purple-400 font-medium text-2xl tracking-wider text-center">歡迎光臨Wubay登入</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field py-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "請輸入Email", autocomplete: "email", class:"field rounded w-full pl-2 py-2 input-focus" %>
      </div>
      <div class="field py-2">
        <%= f.password_field :password, placeholder: "請輸入密碼", class:"field rounded w-full pl-2 py-2 input-focus" , autocomplete: "current-password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field my-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "登入", class:"field bg-purple-400 hover:bg-purple-600 w-full rounded px-6 py-2 my-4 text-white"  %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</main>


