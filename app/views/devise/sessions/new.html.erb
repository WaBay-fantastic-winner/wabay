<div class="bg-slate-400 w-1/4">
  <h2 class="text-blue-400 font-medium text-2xl tracking-wider text-center">登入</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field py-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "請輸入Email", autocomplete: "email", class:"field font-extralight border-solid border-2 rounded w-full pl-2 py-2 border-slate-300" %>
    </div>

    <div class="field py-2">
      <%= f.password_field :password, placeholder: "請輸入密碼", class:"field font-extralight border-solid border-2 rounded w-full pl-2 py-2 border-slate-300" , autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "登入", class:"field bg-blue-400 hover:bg-blue-600 w-full rounded px-6 py-2 my-4 text-white"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>