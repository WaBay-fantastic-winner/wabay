<div class="flex justify-center">

  <%- if controller_name != 'sessions' %>
    <%= link_to "登入", new_session_path(resource_name), class: "mx-2 border-solid border-2 border-blue-400 rounded px-6 py-2 text-blue-400 w-6/12 text-center" %><br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "註冊", new_registration_path(resource_name), class: "mx-2 border-solid border-2 border-blue-400 rounded px-6 py-2 text-blue-400 w-6/12 text-center" %><br />
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "忘記密碼", new_password_path(resource_name), class: "mx-2 field border-solid border-2 border-blue-400 rounded px-6 py-2 text-blue-400 w-6/12 text-center" %><br />
  <% end %>

</div>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "還沒收到驗證信嗎？", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "還沒收到解鎖指示?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "使用google登入", omniauth_authorize_path(resource_name, provider), method: :post %><br />
  <% end %>
<% end %>
