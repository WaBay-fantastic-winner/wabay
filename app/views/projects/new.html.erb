<% if @project.errors.any? %> 
  <div class='bg-gray-100 py-6'>
    <p class='text-center'>資料有誤，請填寫正確格式：</p>
    <ul class='text-red-400'>
      <% @project.errors.full_messages.each do |message| %>
        <li class="error_message text-center"><%= message %></li> 
      <% end %> 
    </ul>
  </div>  
<% end %>
<main class='bg-gray-100 py-10'>
  <div class='max-w-3xl mx-auto py-12 p-8 rounded-3xl bg-white'>
      <h1 class="text-2xl tracking-wider text-center py-4 my-4 bg-purple-400 rounded-2xl text-white" >我想在Wubay提案</h1>
      <%= form_for(@project) do |form| %>
        <div class="new-form-list">
          <%= form.label :organizer, "聯絡窗口 *", class:"new-form-list-label" %>
          <%= form.text_field :organizer, placeholder: "您的真實姓名", class:"new-form-list-field" %>
        </div>
        <div class="new-form-list">
          <%= form.label :email, "電子信箱 *", class:"new-form-list-label" %>
          <%= form.email_field :email, placeholder: "請確認您的電子信箱", class:"new-form-list-field" %>
        </div>
        <div class="new-form-list">
          <%= form.label :phone, "聯絡電話 *", class:"new-form-list-label" %>
          <%= form.telephone_field :phone, placeholder: "您的手機號碼，電話號碼請加入區碼", class:"new-form-list-field" %>
        </div> 
        <div class="new-form-list">
          <%= form.label :project_title, "提案名稱 *", class:"new-form-list-label" %>
          <%= form.text_field :title, placeholder: "可日後變更", class:"new-form-list-field" %>
        </div> 
        <div class="new-form-list">
          <%= form.label :project_amount_target, "提案目標金額 *", class:"new-form-list-label" %>
          <%= form.text_field :amount_target, placeholder: "團隊可簡略試算集資成本、生產或資金的運用，以推算出集資的門檻", class:"new-form-list-field" %>
        </div> 
        <div class="new-form-list">
          <%= form.label :end_time, "提案結束日期 *", class:"new-form-list-label" %>
          <%= form.date_field :end_time, value: "%Y-%m-%d", class: "col-span-3 rounded ml-5 focus:outline-none focus:ring focus:border-purple-300" %>
        </div>
        <div class="border-solid border-2 border-purple-300 px-6 py-6 mb-4">
          <%= form.label :project_description, "提案描述 *", class:"text-purple-400" %>
          <%= form.rich_text_area :description , class:"focus:ring focus:ring-purple-300" %>
        </div>
        <%= form.submit "確認送出", class:"field bg-purple-400 hover:bg-purple-600 w-full rounded px-6 py-2 text-white" %>
      <% end %>
  </div>
