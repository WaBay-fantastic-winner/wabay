<main class='py-10 bg-gray-100 square-bg'>
  <div id="donate_item" class="max-w-3xl p-8 py-12 mx-auto bg-white rounded-3xl">
    <h1 class="py-4 my-4 text-2xl tracking-wider text-center text-white bg-purple-400 rounded-2xl"> 新增贊助方案 </h1>
    <%= render 'form' %>
    <%= form_with model: @donate_item, url: project_donate_items_path(id: current_user.projects.find_by!(id: params[:project_id])), method: :post do |form|%>
      <div class="form-list">
        <%= form.label :title, '贊助方案標題',class:"form-list-label" %>
        <%= form.text_field :title,class:"form-list-field input-focus", placeholder: "請輸入標題" %>
      </div>
      <div class="form-list">
        <%= form.label :price, '贊助方案價格',class:"form-list-label" %>
        <%= form.text_field :price, class:"form-list-field input-focus", placeholder: "請輸入新台幣" %> 
      </div>
      <div class="px-6 py-6 mb-4 border-2 border-purple-300 border-solid">
        <%= form.label :content, '贊助方案內容',class:"form-list-label" %>
        <%= form.rich_text_area :content,class:"input-focus" %>
      </div>
      <%= form.submit '新增贊助方案', class:"field bg-purple-400 hover:bg-purple-600 w-full rounded px-6 py-3 text-white" %>
    <% end %>
    <div class='mt-10 text-center'>
      <%= link_to '返回專案', project_path(id: params[:project_id]), class:'inline-block p-2 border border-solid border-purple-400 rounded-xl hover:text-gray-400' %></div>
  </div>
</main>



